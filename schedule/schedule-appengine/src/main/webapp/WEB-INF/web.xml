<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>user-context</filter-name>
        <filter-class>com.jasify.schedule.appengine.http.filter.UserContextFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>user-context</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>username</servlet-name>
        <servlet-class>com.jasify.schedule.appengine.http.servlet.UsernameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.jasify.schedule.appengine.http.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>isLoggedIn</servlet-name>
        <servlet-class>com.jasify.schedule.appengine.http.servlet.IsLoggedInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.jasify.schedule.appengine.http.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>com.jasify.schedule.appengine.http.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>username</servlet-name>
        <url-pattern>/username</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>isLoggedIn</servlet-name>
        <url-pattern>/isLoggedIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
