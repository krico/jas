<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>guestbook</servlet-name>
        <servlet-class>ch.findmyslot.tutorial.appengine.GuestbookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>list-greetings</servlet-name>
        <servlet-class>ch.findmyslot.tutorial.appengine.ListGreetingsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sign</servlet-name>
        <servlet-class>ch.findmyslot.tutorial.appengine.SignGuestbookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>openid</servlet-name>
        <servlet-class>ch.findmyslot.tutorial.appengine.OpenIDServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>openid-callback</servlet-name>
        <servlet-class>ch.findmyslot.tutorial.appengine.OpenIDCallbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>openid-callback</servlet-name>
        <url-pattern>/openid-callback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>openid</servlet-name>
        <url-pattern>/openid</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>list-greetings</servlet-name>
        <url-pattern>/list-greetings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sign</servlet-name>
        <url-pattern>/sign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>guestbook</servlet-name>
        <url-pattern>/guestbook</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
